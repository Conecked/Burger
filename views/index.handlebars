<h1>Have A Burger!</h1>
<img src="/assets/img/burger.png" alt="aweseomeBurger" id="burgerImage" class="center" height="175px" width="225px">

<div class="row">
<div class="col-lg">
<h2>Burgers to EAT!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col-lg">
<h2>Burgers DEVOURED!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

{{!-- <h2>Add a Burger</h2> --}}
<form class="create-form">

  <div class="form-group">
    {{!-- <label for="burger">Burger Name:</label> --}}
    <input type="text" id="burger" name="burger_name">
  </div>

  <button class="btn btn-primary" type="#submit">Add a Burger!</button>
  <p>Enter a burger you want to eat and click the submit button!</p>
</form>